<!DOCTYPE html>
<html>
  <head>
    <title>PlusBookres</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <div class="navbar-brand"><%= link_to "Bookers", root_path %></div>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="mr-2"><%= link_to "Home", user_path(current_user) %></li>
              <li class="mr-2"><%= link_to "User", users_path %></li>
              <li class="mr-2"><%= link_to "Book", users_path %></li>
              <li class="mr-2"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li class="mr-2"><%= link_to "Home", root_path %></li>
              <li class="mr-2"><%= link_to "About", about_path %></li>
              <li class="mr-2"><%= link_to "Sign Up", new_user_registration_path %></li>
              <li class="mr-2"><%= link_to "Log In", new_user_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </body>
</html>
